<%- include('partials/header') %>

<div class="results-container">
  <h1 class="results-title">Resultados para "<%= query %>"</h1>

  <ul class="results-list">
    <% if (results.length > 0) { %>
      <% results.forEach(result => { %>
        <li class="result-item">
          <div class="result-content">
            <h2 class="result-title"><%= result.title %></h2>
            <% if (result.cover_image) { %>
              <img src="<%= result.cover_image %>" alt="<%= result.title %>" class="result-image">
            <% } %>
            <p class="result-type">Tipo: <%= result.type %></p>
            <p class="result-id">ID: <%= result.id %></p>
          </div>
          <div class="wishlist">
            <p class="wishlist-text">Agregar a Wishlist</p>
          </div>
        </li>
      <% }) %>
    <% } else { %>
      <p class="no-results">No se encontraron resultados para "<%= query %>".</p>
    <% } %>
  </ul>
</div>

<%- include('partials/footer') %>